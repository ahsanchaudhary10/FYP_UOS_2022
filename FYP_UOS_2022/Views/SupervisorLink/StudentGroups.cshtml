@model IEnumerable<FYP_UOS_2022.Models.Group>

@{
    ViewBag.Title = "StudentGroups";
}

<h2>StudentGroups</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Group_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Supervisor.Supervisor_Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Group_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Supervisor.Supervisor_Name)
        </td>
        <td>
            <a class="btn btn-primary" href="@Url.Action("GroupDetail","SupervisorLink",new { id=item.id})">Details</a>

        </td>
    </tr>
}

</table>
